{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,               // âœ… This is REQUIRED
    "baseUrl": "./backend/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["backend/src/**/*"]
}
